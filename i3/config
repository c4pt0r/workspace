## Manual management of external displays
# Set the shortcuts and what they do
set $mode_display Ext Screen (v) DP ON, (h) HDMI ON, (x) DP OFF, (y) HDMI OFF
mode "$mode_display" {
    bindsym v exec --no-startup-id xrandr --output DP-2 --auto --right-of LVDS1, mode "default"
    bindsym h exec --no-startup-id xrandr --output HDMI-1 --auto --right-of LVDS1, mode "default"
    bindsym x exec --no-startup-id xrandr --output DP-2 --auto --off, mode "default"
    bindsym y exec --no-startup-id xrandr --output HDMI-1 --auto --off, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
# Declare here the shortcut to bring the display selection menu
bindsym $mod+x mode "$mode_display"

bindsym Mod1+Tab workspace next
bindsym Mod1+Shift+Tab workspace prev
